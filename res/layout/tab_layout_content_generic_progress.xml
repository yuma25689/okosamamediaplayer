<?xml version="1.0" encoding="utf-8"?>
<okosama.app.panel.TouchHookRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_relativelayout_tabcontent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<RelativeLayout
	    android:id="@+id/bottom_info_bar"
	    android:layout_width="match_parent"
	    android:layout_height="32dip"
	    android:layout_alignParentTop="true"
	    android:gravity="center_vertical"
	    android:background="@color/gradiant_notify"
	    android:ignoreGravity="@+id/icon"
	    android:visibility="gone">
	
	    <include layout="@layout/track_list_item_common" />
	
	</RelativeLayout>
    <RelativeLayout 
        android:id="@+id/TabCommonProgressPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <ProgressBar 
        android:id="@+id/progress_common"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:indeterminateDrawable="@drawable/okosama_progress_inverse"        
        android:layout_gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        style="?android:attr/progressBarStyleLargeInverse"        
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/updateing" 
        android:layout_centerHorizontal="true"
        android:layout_below="@id/progress_common"
        />
    </RelativeLayout>
    
    
</okosama.app.panel.TouchHookRelativeLayout>